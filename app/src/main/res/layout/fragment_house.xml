<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cardStopka"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textViewData"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/view_rounded"
                android:drawableRight="@drawable/ic_date_aqua_24dp"
                android:gravity="center"
                android:textColor="#41aecf"
                android:textSize="20sp" />

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewSniadanie"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_margin="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/buttonAddProductBreakfast"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/ic_add_circle_24dp" />

                    <TextView
                        android:id="@+id/textViewSniadanie"
                        android:layout_width="95dp"
                        android:layout_height="33dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/breakfast"
                        android:textSize="20sp" />


                    <TextView
                        android:id="@+id/KcalS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/valuesZero"
                        android:textColor="#551A8B"/>

                    <TextView
                        android:id="@+id/PS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/valuesZero"
                        android:textColor="#41AECF"/>


                    <TextView
                        android:id="@+id/WS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/valuesZero"
                        android:textColor="#00C853"/>

                    <TextView
                        android:id="@+id/TS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/valuesZero"
                        android:textColor="#FFA500"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <ListView
                android:id="@+id/ListViewSniadanie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                tools:ignore="NestedScrolling" />

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewLunch"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/buttonAddProductLunch"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/ic_add_circle_24dp"
                        android:contentDescription="@string/desc"/>

                    <TextView
                        android:id="@+id/textViewLunch"
                        android:layout_width="95dp"
                        android:layout_height="33dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/lunch"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/KcalL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/valuesZero"
                        android:textColor="#551A8B"/>


                    <TextView
                        android:id="@+id/PL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/valuesZero"
                        android:textColor="#41AECF"/>

                    <TextView
                        android:id="@+id/WL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/valuesZero"
                        android:textColor="#00C853"/>

                    <TextView
                        android:id="@+id/TL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/valuesZero"
                        android:textColor="#FFA500"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <ListView
                android:id="@+id/ListViewLunch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:ignore="NestedScrolling" />


            <android.support.v7.widget.CardView
                android:id="@+id/cardViewObiad"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/buttonAddProductDinner"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/ic_add_circle_24dp"
                        android:contentDescription="@string/desc" />

                    <TextView
                        android:id="@+id/textViewObiad"
                        android:layout_width="95dp"
                        android:layout_height="33dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/dinner"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/KcalO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/valuesZero"
                        android:textColor="#551A8B"/>

                    <TextView
                        android:id="@+id/PO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/valuesZero"
                        android:textColor="#41AECF"/>

                    <TextView
                        android:id="@+id/WO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/valuesZero"
                        android:textColor="#00C853"/>
                    <TextView
                        android:id="@+id/TO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/valuesZero"
                        android:textColor="#FFA500"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <ListView
                android:id="@+id/ListViewObiad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:ignore="NestedScrolling" />

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewPrzekąska"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/buttonAddProductSnack"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/ic_add_circle_24dp"
                        android:contentDescription="@string/desc"/>

                    <TextView
                        android:id="@+id/textViewPrzekąska"
                        android:layout_width="95dp"
                        android:layout_height="33dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/snack"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/KcalP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/valuesZero"
                        android:textColor="#551A8B"/>


                    <TextView
                        android:id="@+id/PP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/valuesZero"
                        android:textColor="#41AECF"/>

                    <TextView
                        android:id="@+id/WP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/valuesZero"
                        android:textColor="#00C853"/>

                    <TextView
                        android:id="@+id/TP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/valuesZero"
                        android:textColor="#FFA500"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <ListView
                android:id="@+id/ListViewPrzekąska"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:ignore="NestedScrolling" />

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewKolacja"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="4dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/buttonAddProductSupper"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/ic_add_circle_24dp"
                        android:contentDescription="@string/desc"/>

                    <TextView
                        android:id="@+id/textViewKolacja"
                        android:layout_width="95dp"
                        android:layout_height="33dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/supper"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/KcalK"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/valuesZero"
                        android:textColor="#551A8B"/>

                    <TextView
                        android:id="@+id/PK"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/valuesZero"
                        android:textColor="#41AECF"/>

                    <TextView
                        android:id="@+id/WK"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/valuesZero"
                        android:textColor="#00C853"/>

                    <TextView
                        android:id="@+id/TK"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/valuesZero"
                        android:textColor="#FFA500"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <ListView
                android:id="@+id/ListViewKolacja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:ignore="NestedScrolling" />
        </LinearLayout>
    </ScrollView>


    <android.support.v7.widget.CardView
        android:id="@+id/cardStopka"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false" android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/progressBarCalories"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp" />

                <TextView
                    android:id="@+id/textViewAllCalories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="@string/valuesZero"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/progressBarProtein"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"/>

                <TextView
                    android:id="@+id/textViewAllProtein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="@string/valuesZero"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    tools:ignore="SmallSp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/progressBarCarb"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp" />

                <TextView
                    android:id="@+id/textViewAllCarb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="@string/valuesZero"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    tools:ignore="SmallSp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/progressBarFat"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"/>

                <TextView
                    android:id="@+id/textViewAllFat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="@string/valuesZero"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    tools:ignore="SmallSp"/>
            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>


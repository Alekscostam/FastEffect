<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/textViewBack"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:background="#41AECF"
                android:drawableStart="@drawable/ic_left"
                android:gravity="center"

                android:text="Tworzenie konta..."
                android:textColor="#FFFFFF"
                android:textSize="27sp" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutEmail"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginTop="30dp"
                tools:ignore="MissingConstraints">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textInputEditTextEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textColor="	#808080"
                    android:textSize="18sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutPassword"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:ignore="MissingConstraints">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textInputEditTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:maxLength="15"
                    android:textColor="	#808080"
                    android:textSize="18sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutPasswordAgain"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:ignore="MissingConstraints">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textInputEditTextPasswordAgain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/passwordAgain"
                    android:inputType="textPassword"
                    android:maxLength="15"
                    android:singleLine="true"
                    android:textColor="	#808080"
                    android:textSize="18sp" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutWaga"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:ignore="MissingConstraints">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textInputEditTextWaga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/wieght"
                    android:inputType="numberDecimal"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textColor="	#808080"
                    android:textSize="18sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutWiek"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:ignore="MissingConstraints">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textInputEditTextWiek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/age"
                    android:inputType="number"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textColor="	#808080"
                    android:textSize="18sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutWzrost"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:ignore="MissingConstraints">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textInputEditTextWzrost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/height"
                    android:inputType="number"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textColor="	#808080"
                    android:textSize="18sp" />
            </android.support.design.widget.TextInputLayout>

            <RadioGroup
                android:id="@+id/RadioPlec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <RadioButton
                    android:id="@+id/radioButtonM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="@string/man" />

                <RadioButton
                    android:id="@+id/radioButtonW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="@string/women" />

            </RadioGroup>

            <TextView
                android:id="@+id/textViewAlert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:ignore="MissingConstraints" />


            <Button
                android:id="@+id/buttonRegister"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_rounded_aqua"
                android:onClick="buttonRegister_Click"
                android:text="@string/Create_Account"
                android:textAllCaps="false"
                android:textSize="18sp" />

        </LinearLayout>


    </ScrollView>

</android.support.constraint.ConstraintLayout>